<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="功能设置"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="立即刷新"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/refresh_time_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="自动刷新时间"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="15dp"
                        android:text="是否启用一言"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:clickable="true"/>
                    <Switch
                        android:id="@+id/is_enable_hitokoto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/hitokoto_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="15dp"
                    android:text="一言句子类型"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="selectHitokotoType"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="效果设置"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="15dp"
                    android:text="字体样式"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:onClick="selectFontStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="15dp"
                    android:text="字体颜色"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="selectFontColor"/>
                <TextView
                    android:id="@+id/font_size_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="字体大小"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="其它"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/history_textview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:text="历史记录"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="showHistory"/>
                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:text="问题反馈"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="feedBack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:text="版本：子鼠v1.0"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>